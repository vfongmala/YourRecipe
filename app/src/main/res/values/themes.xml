<resources>
    <!-- Base application theme. -->
    <style name="Theme.YourRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.YourRecipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YourRecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.YourRecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>